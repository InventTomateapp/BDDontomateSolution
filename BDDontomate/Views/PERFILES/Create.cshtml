@model BDDontomate.PERFILES

@{
    ViewBag.Title = "Crear";
}

<div class="col-sm-3 col-md-3 col-lg-3 col-xl-3"></div>
    <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6">
        Crear perfil
    </div>
<div class="form-horizontal">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        
            <div class="form-group col-md-6 col-md-offset-2">
                <h4>PERFILES</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </div>
                <div class="form-group col-md-6 col-md-offset-2">
                    @Html.LabelFor(model => model.NOMBRE, htmlAttributes: new { @class = "form-control-lg" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NOMBRE, new { htmlAttributes = new { @class = " form-control-lg" } })
                    @Html.ValidationMessageFor(model => model.NOMBRE, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-6 col-md-offset-2">
                @Html.LabelFor(model => model.DESCRIPCION, htmlAttributes: new { @class = "card-title" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DESCRIPCION, new { htmlAttributes = new { rows = "4", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DESCRIPCION, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-6 col-md-offset-2">
                <div class="col-md-5">
                    <input type="submit" value="Crear" class="btn btn-success" />
                    @Html.ActionLink("Regresar", "Index", null, htmlAttributes: new { @class = "btn btn-danger" })
                </div>
            </div>
}
    </div>
</div>
    <div class="col-sm-3 col-md-3 col-lg-3 col-xl-3"></div>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>


