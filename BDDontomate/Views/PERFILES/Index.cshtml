@model IEnumerable<BDDontomate.PERFILES>

@{
    ViewBag.Title = "Perfiles";
}


<div class="col-md-4">
    <h2>Lista perfiles</h2>
</div>
<div class="col-md-4"></div>
<p>
    @Html.ActionLink("Crear", "Create", null, new { @class = "btn btn-secondary" })
</p>
<table class="table table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NOMBRE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DESCRIPCION)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NOMBRE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DESCRIPCION)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.IDPERFIL }, new { @class="btn btn-primary"})
            @Html.ActionLink("Detalles", "Details", new { id = item.IDPERFIL }, new { @class = "btn btn-info"})
            @Html.ActionLink("Eliminar", "Delete", new { id = item.IDPERFIL }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
